@model SPMBNET7.CoreBusiness.Models.Modules._01_Jadual.JPenyemak

@{
    ViewData["Title"] = "Penyemak - Ubah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_JSCreate" />

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleEditPartial.cshtml" />
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input name="syscode" value="SPPB" hidden />
            <input asp-for="SuPekerjaId" hidden />
            <div class="row g-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="SuPekerjaId" class="control-label"></label>
                        <input value="@Model.SuPekerja!.NoGaji - @Model.SuPekerja!.Nama" class="form-control form-control-sm text-uppercase" disabled />
                        <span asp-validation-for="SuPekerjaId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-3 mb-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="MinAmaun" class="control-label"></label><label> <i class="text-success ml-2"> (amaun diluluskan hanya melibatkan modul yang disemak)</i></label>
                    </div>
                </div>
                <div class="col-md-3">
                    <input asp-for="MinAmaun" class="form-control form-control-sm" type="number" />
                    <span asp-validation-for="MinAmaun" class="text-danger"></span>

                </div>
                <div class="col-md-1">
                    <p class="text-center mb-0"><i class="fas fa-angle-right"></i></p>
                </div>
                <div class="col-md-3">
                    <input asp-for="MaksAmaun" class="form-control form-control-sm" type="number" />
                    <span asp-validation-for="MaksAmaun" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-md-6 mb-2">
                    <label>Modul yang disemak</label>
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsNotaMinta" /> @Html.DisplayNameFor(model => model.IsNotaMinta)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsPO" /> @Html.DisplayNameFor(model => model.IsPO)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsBelian" /> @Html.DisplayNameFor(model => model.IsBelian)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsPV" /> @Html.DisplayNameFor(model => model.IsPV)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsPendahuluan" /> @Html.DisplayNameFor(model => model.IsPendahuluan)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsInvois" /> @Html.DisplayNameFor(model => model.IsInvois)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <label>Laporan yang disemak</label>

                    <div class="card">
                        <div class="card-body">

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsLaporanBukuVot" /> @Html.DisplayNameFor(model => model.IsLaporanBukuVot)
                                </label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>


            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
