@model SPMBNET7.CoreBusiness.Models.Modules._02_Akaun.AkBank

@{
    ViewData["Title"] = "Akaun Bank - Ubah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleEditPartial.cshtml" />

        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input name="syscode" value="SPPB" hidden />
            <div class="form-group">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm" readonly />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoAkaun" class="control-label"></label>
                <input asp-for="NoAkaun" class="form-control form-control-sm" />
                <span asp-validation-for="NoAkaun" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JBankId" class="control-label"></label>
                <select class="form-control form-control-sm" asp-for="JBankId">
                    @foreach (var s in ViewBag.JBank)
                    {
                        <option value="@s.Id">@s.Nama </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="JKWId" class="control-label"></label>
                <select class="form-control form-control-sm" asp-for="JKWId" disabled>
                    @foreach (var s in ViewBag.JKW)
                    {
                        <option value="@s.Id">@s.Perihal </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="JBahagianId" class="control-label"></label>
                <select class="form-control form-control-sm" asp-for="JBahagianId" disabled>
                    @foreach (var s in ViewBag.JBahagian)
                    {
                        <option value="@s.Id">@s.Kod - @s.Perihal </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AkCartaId" class="control-label"></label>
                <select class="form-control form-control-sm select2" asp-for="AkCartaId" disabled>
                    @foreach (var s in ViewBag.AkCarta)
                    {
                        <option value="@s.Id">@s.Kod - @s.Perihal </option>
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <div class="card mb-2">
                    <div class="card-body pl-3 pr-3 pt-2">

                        <label class="control-label">Maklumat Tambahan : </label>
                        <div class="custom-control custom-radio">
                            <div class="custom-control custom-radio">
                                <input type="checkbox" data-val="true" id="IsBajet" asp-for="IsBajet">
                                <label class="control-label">Akaun bank ini terlibat dengan peruntukan</label>
                                <input type="hidden" name="IsBajet" value="false" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
