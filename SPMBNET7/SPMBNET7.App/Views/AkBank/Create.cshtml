@model SPMBNET7.CoreBusiness.Models.Modules._02_Akaun.AkBank


@{
    ViewData["Title"] = "Akaun Bank - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleCreatePartial.cshtml" />

        <form asp-action="Create" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="syscode" value="SPPB" hidden/>
            <div class="form-group">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm" />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoAkaun" class="control-label">No Akaun</label>
                <input asp-for="NoAkaun" class="form-control form-control-sm" required />
                <span asp-validation-for="NoAkaun" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JBankId" class="control-label"></label>
                <select class="form-control form-control-sm" asp-for="JBankId" required>
                    @foreach (var s in ViewBag.JBank)
                    {
                        <option value="@s.Id">@s.Nama </option>
                    }
                </select>
                <span asp-validation-for="JBankId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JKWId" class="control-label"></label>
                <select class="form-control form-control-sm" asp-for="JKWId" required>
                    @foreach (var s in ViewBag.JKW)
                    {
                        <option value="@s.Id">@s.Perihal </option>
                    }
                </select>
                <span asp-validation-for="JKWId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JBahagianId" class="control-label"></label>
                <select class="form-control form-control-sm" asp-for="JBahagianId" required>
                    @foreach (var s in ViewBag.JBahagian)
                    {
                        <option value="@s.Id">@s.Kod - @s.Perihal </option>
                    }
                </select>
                <span asp-validation-for="JBahagianId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AkCartaId" class="control-label"></label>
                <select class="form-control form-control-sm select2" asp-for="AkCartaId" required>
                    @foreach (var s in ViewBag.AkCarta)
                    {
                        <option value="@s.Id">@s.Kod - @s.Perihal </option>
                    }
                </select>
                <span asp-validation-for="AkCartaId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="card mb-2">
                    <div class="card-body pl-3 pr-3 pt-2">

                        <label class="control-label">Maklumat Tambahan : </label>
                        <div class="custom-control custom-radio">
                            <input type="checkbox" data-val="true" id="Penyertaan" name="IsBajet" value="true" checked>
                            <label class="control-label">Akaun bank ini terlibat dengan peruntukan</label>
                            <input asp-for="IsBajet" hidden value="false">
                        </div>
                    </div>
                </div>

            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
