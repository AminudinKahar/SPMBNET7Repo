<script type="text/javascript">
    $(document).ready(function () {

        var table = $('.table').DataTable({
            "paging": false,
            rowReorder: false,
            columnDefs: [
                { orderable: false, targets: '_all' }
            ],
            "scrollY": "50vh",
            "scrollX": true,
            "scrollCollapse": true,
            "paging": false,
            dom: 'lrt'
        });

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

    });

    function printPDF() {
        var votId = $("#votId").val();
        var tahun = $("#tahun").val();
        var jKWId = $("#jKWId").val();
        var jBahagianId = $("#jBahagianId").val();
        var searchFrom = $("#searchFrom").val();
        var searchTo = $("#searchTo").val();
        var URL = "@Url.Action("PrintBukuVotDetailsPdf", "AbBukuVot")?id=" + votId + "&tahun=" + tahun +
            "&jKWId=" + jKWId + "&jBahagianId=" + jBahagianId +
            "&searchFrom=" + searchFrom + "&searchTo=" + searchTo;
        $('<a href="' + URL + '" target="_blank"></a>')[0].click();
    }

</script>
