@model SPMBNET7.CoreBusiness.Models.Modules._02_Akaun.ViewModels.AkPOLarasViewModel

@{
    ViewData["Title"] = "Pel. Pesanan Tempatan - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleDetailsPartial.cshtml" />
        <div class="row g-3">
            <div class="col-lg-10">
                <div class="row g-3">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Tahun" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.Tahun" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="JKWId" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.JKW?.Kod - @Model.JKW?.Perihal " readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="JBahagianId" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.JBahagian?.Kod - @Model.JBahagian?.Perihal " readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Tarikh" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.Tarikh.ToString("dd/MM/yyyy")" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NoRujukan" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.AkPO?.NoPO" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AkPOId" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.AkPO?.NoPO" readonly />
                        </div>
                    </div>

                </div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">No Pembekal</label>
                            <input class="form-control form-control-sm" value="@Model.AkPO?.AkPembekal?.KodSykt" readonly />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="control-label">Nama Pembekal</label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.AkPO?.AkPembekal?.NamaSykt" readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Alamat</label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.AkPO?.AkPembekal?.Alamat1 " readonly />
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm text-uppercase" value="@Model.AkPO?.AkPembekal?.Alamat2 " readonly />
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm text-uppercase" value="@Model.AkPO?.AkPembekal?.Alamat3 " readonly />
                </div>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Poskod</label>
                            <input class="form-control form-control-sm" value="@Model.AkPO?.AkPembekal?.Poskod " readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Bandar</label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.AkPO?.AkPembekal?.Bandar " readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Tel</label>
                            <input class="form-control form-control-sm" value="@Model.AkPO?.AkPembekal?.Telefon1 " readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Emel</label>
                            <input class="form-control form-control-sm" value="@Model.AkPO?.AkPembekal?.Emel " readonly />
                        </div>
                    </div>

                </div>
                <div class="form-group pb-3">
                    <label asp-for="Tajuk" class="control-label"></label>
                    <textarea asp-for="Tajuk" class="form-control form-control-sm text-uppercase" rows="2" readonly> @Model.Tajuk</textarea>
                </div>
            </div>
            <div class="col-lg-2">

                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlCetak" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlCetak" type="radio" id="FlCetak1" name="FlCetak" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlCetak1">Belum</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlCetak" type="radio" id="FlCetak2" name="FlCetak" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlCetak">Sudah</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlPosting" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlPosting" type="radio" id="FlPosting1" name="FlPosting" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlPosting">Belum</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlPosting" type="radio" id="FlPosting2" name="FlPosting" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlPosting">Sudah</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label class="control-label">Batal</label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlHapus">Tidak</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlHapus">Ya</label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        @*table Objek*@
        <div class="card box-shadow mb-3">
            <div class="card-header">
                <h6>Objek</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table id="tblObjek" class="table table-sm" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:40%">Kod</th>
                                <th style="width:50%">Amaun RM</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyObjek">

                            @foreach (var item in ViewBag.akPOLaras1)
                            {
                                <tr id="@item.Id">
                                    <td id="akCartaId" hidden>@item.AkCartaId</td>
                                    <td class="text-uppercase">@item.AkCarta.Kod - @item.AkCarta.Perihal</td>
                                    <td class="text-end" id="td1Amaun">@Convert.ToDecimal(item.Amaun).ToString("#,##0.00")</td>
                                </tr>

                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>

                </div>
            </div>
            <div class="card-footer">
                <div class="form-group">
                    <label class="control-label">Jumlah Objek RM</label>
                    <input class="form-control form-control-sm" id="jumlahObjek" value="@Model.Jumlah" readonly />
                </div>
            </div>
        </div>
        @*table Objek end*@

        @*table perihal*@
        <div class="card box-shadow mb-3">
            <div class="card-header">
                <h6>Urusniaga</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblUrusniaga" class="table table-sm" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr>
                                <th >Bil</th>
                                <th >No Stok</th>
                                <th >Perihal</th>
                                <th >Kuantiti</th>
                                <th >Unit</th>
                                <th >Harga/Unit RM</th>
                                <th >Amaun RM</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyPerihal">

                            @foreach (var item in ViewBag.akPOLaras2)
                            {
                                <tr>
                                    <td class="text-end">@item.Bil</td>
                                    <td>@item.NoStok</td>
                                    <td class="text-uppercase">@item.Perihal</td>
                                    <td class="text-end">@item.Kuantiti</td>
                                    <td class="text-uppercase">@item.Unit</td>
                                    <td class="text-end">@Convert.ToDecimal(item.Harga).ToString("#,##0.00")</td>
                                    <td class="text-end amaunPerihal">@Convert.ToDecimal(item.Amaun).ToString("#,##0.00")</td>
                                </tr>

                            }

                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>


            </div>
            <div class="card-footer">
                <div class="form-group">
                    <label class="control-label">Jumlah Perihal RM</label>
                    <input class="form-control form-control-sm" id="jumlahPerihal" value="@Model.JumlahPerihal" readonly />
                </div>
            </div>
        </div>
        @*table perihal end*@
        <hr />
        <div class="form-group">

            @if (Model.FlPosting == 1)
            {
            }
            else
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a>
            }
            <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </div>
    </div>
</div>
