@model SPMBNET7.CoreBusiness.Models.Modules._02_Akaun.AkTerima

@{
    ViewData["Title"] = "Terimaan - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleDetailsPartial.cshtml" />

        <div class="row g-3">
            <div class="col-lg-10">
                <div class="row g-3">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Tarikh" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Tarikh)" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Tahun" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.Tahun" readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="JKWId" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.JKW?.Kod - @Model.JKW?.Perihal " readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="JBahagianId" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.JBahagian?.Kod - @Model.JBahagian?.Perihal " readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="AkBankId" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.AkBank?.NoAkaun - @Model.AkBank?.JBank?.Nama " readonly />
                        </div>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="NoRujukan" class="control-label"></label>
                            <input value="@Model.NoRujukan.Substring(3)" class="form-control form-control-sm" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="NoKp" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.NoKp" readonly />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Nama" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.Nama " readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Alamat1" class="control-label"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.Alamat1 " readonly />
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm text-uppercase" value="@Model.Alamat2 " readonly />
                </div>
                <div class="form-group">
                    <input class="form-control form-control-sm text-uppercase" value="@Model.Alamat3 " readonly />
                </div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Poskod" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.Poskod " readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Bandar" class="control-label"></label>
                            <input class="form-control form-control-sm text-uppercase" value="@Model.Bandar " readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="JNegeriId" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.JNegeri?.Kod - @Model.JNegeri?.Perihal" readonly />
                        </div>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Tel" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.Tel " readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Emel" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.Emel " readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Sebab" class="control-label"></label>
                    <textarea class="form-control form-control-sm text-uppercase" readonly rows="2">@Model.Sebab</textarea>
                </div>
            </div>
            <div class="col-lg-2 pb-3">
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">

                        <div class="form-group col-sm">
                            <label asp-for="FlJenisTerima" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisTerima" type="radio" id="FlJenisBaucer1" name="FlJenisTerima" class="custom-control-input" value="Am" checked>
                                <label class="custom-control-label" for="FlJenisBaucer1">Am</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisTerima" type="radio" id="FlJenisBaucer3" name="FlJenisTerima" class="custom-control-input" value="Pendahuluan">
                                <label class="custom-control-label" for="FlJenisBaucer3">Pendahuluan</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">

                        <div class="form-group col-sm">
                            <label asp-for="FlKategoriPembayar" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlKategoriPembayar" type="radio" id="FlKategoriPenerima1" name="FlKategoriPembayar" class="custom-control-input" value="Am" checked>
                                <label class="custom-control-label" for="FlKategoriPenerima1">Am</label>
                            </div>
                            <div class="custom-control custom-radio" hidden>
                                <input asp-for="FlKategoriPembayar" type="radio" id="FlKategoriPenerima2" name="FlKategoriPembayar" class="custom-control-input" value="Penghutang">
                                <label class="custom-control-label" for="FlKategoriPenerima2">Pembekal</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlKategoriPembayar" type="radio" id="FlKategoriPenerima3" name="FlKategoriPembayar" class="custom-control-input" value="Pekerja">
                                <label class="custom-control-label" for="FlKategoriPenerima3">Pekerja</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlCetak" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlCetak" type="radio" id="FlCetak1" name="FlCetak" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlCetak1">Belum</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlCetak" type="radio" id="FlCetak2" name="FlCetak" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlCetak">Sudah</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlPosting" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlPosting" type="radio" id="FlPosting1" name="FlPosting" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlPosting">Belum</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlPosting" type="radio" id="FlPosting2" name="FlPosting" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlPosting">Sudah</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlHapus" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlHapus">Tidak</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlHapus" type="radio" id="FlHapus2" name="FlHapus" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlHapus">Ya</label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        @*table Objek*@
        <div class="card box-shadow mb-3">
            <div class="card-header">
                <h6>Objek</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table id="tblObjek" class="table table-sm" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:40%">Kod</th>
                                <th style="width:50%" >Amaun RM</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyObjek">
                            @foreach (var item in ViewBag.akTerima1)
                            {
                                <tr id="@item.Id">
                                    <td id="akCartaId" hidden>@item.AkCartaId</td>
                                    <td class="text-uppercase">@item.AkCarta.Kod - @item.AkCarta.Perihal</td>
                                    <td id="td1Amaun" class="text-end">@Convert.ToDecimal(item.Amaun).ToString("#,##0.00")</td>
                                </tr>

                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>

                </div>
            </div>

        </div>
        @*table Objek end*@

        @*table urusniaga*@
        <div class="card box-shadow mb-3">
            <div class="card-header">
                <h6>Urusniaga</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblUrusniaga" class="table table-sm" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Cara Bayar</th>
                                <th>Amaun RM</th>
                                <th>No Cek</th>
                                <th>Jenis Cek</th>
                                <th>Kod Bank Cek</th>
                                <th>Tempat Cek</th>
                                <th>No Slip</th>
                                <th>Tarikh Slip</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyUrusniaga">
                            @foreach (var item in ViewBag.akTerima2)
                            {
                                <tr>
                                    <td id="jCaraBayarId" hidden>@item.JCaraBayarId</td>
                                    <td class="text-uppercase">@item.JCaraBayar.Perihal</td>
                                    <td class="text-end amaunUrusniaga">@Convert.ToDecimal(item.Amaun).ToString("#,##0.00")</td>
                                    <td>@item.NoCek</td>
                                    @switch (@item.JenisCek)
                                    {
                                        case "1":
                                            <td>CEK CAWANGAN INI</td>
                                            break;
                                        case "2":
                                            <td>CEK TEMPATAN</td>
                                            break;
                                        case "3":
                                            <td>CEK LUAR</td>
                                            break;
                                        case "4":
                                            <td>CEK ANTARABANGSA</td>
                                            break;
                                        default:
                                            <td></td>
                                            break;
                                    }
                                    <td class="text-uppercase">@item.KodBankCek</td>
                                    <td class="text-uppercase">@item.TempatCek</td>
                                    <td>@item.NoSlip</td>
                                    @if (@item.TarSlip == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td>@item.TarSlip.ToString("dd/MM/yyyy")</td>
                                    }


                                </tr>

                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>


            </div>
        </div>
        @*table urusniaga end*@

        @switch (Model.FlJenisTerima)
        {
            case JenisBaucer.Inbois:
                @*table Objek*@
                <div class="card box-shadow mb-3">
                    <div class="card-header">
                        <h6>Invois Dikeluarkan</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                            <table id="tblInvois" class="table table-sm" cellpadding="0" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th style="width:40%">No Invois</th>
                                        <th style="width:10%">Tarikh</th>
                                        <th style="width:50%">Amaun RM</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyObjek">
                                    @foreach (var item in ViewBag.akTerima3)
                                    {
                                        <tr id="@item.Id">
                                            <td id="akInvoisId" hidden>@item.AkInvoisId</td>
                                            <td>@item.AkInvois.NoInbois</td>
                                            <td>@item.AkInvois.Tarikh.ToString("dd/MM/yyyy")</td>
                                            <td class="text-end" id="td3Amaun">@item.Amaun</td>
                                        </tr>

                                    }
                                </tbody>
                                <tfoot>

                                </tfoot>
                            </table>

                        </div>
                    </div>

                </div>
                @*table Objek end*@
                break;
            case JenisBaucer.Pendahuluan:
                @*pendahuluan pelbagai*@
                <div class="card box-shadow mb-3" id="cardPendahuluanPelbagai">
                    <div class="card-header">
                        <h6>Pendahuluan Pelbagai</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="SpPendahuluanPelbagaiId" class="control-label"></label>
                            <input class="form-control form-control-sm" value="@Model.SpPendahuluanPelbagai?.NoPermohonan" id="ddlPendahuluanPelbagai" readonly />
                            <span asp-validation-for="SpPendahuluanPelbagaiId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @*pendahuluan pelbagai end*@
                break;
            default:
                break;
        }

        @if (Model.FlHapus == 1)
        {
            <br />
            <div class="form-group pb-2">
                <label class="control-label">Sebab Hapus </label>
                <textarea class="form-control form-control-sm text-uppercase" readonly rows="2">@Model.SebabHapus</textarea>
            </div>
        }

        <hr />
        <div class="form-group">
            @if (Model.FlPosting == 1)
            {
            }
            else
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a>
            }
            <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </div>

    </div>
</div>
