@model SPMBNET7.CoreBusiness.Models.Modules._03_Sumber.SuProfil


@{
    ViewData["Title"] = "Elaun JSM - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleDeletePartial.cshtml" />

        <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
        <div class="row g-3 mb-2">
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="Tahun" class="control-label"></label>
                    <input asp-for="Tahun" class="form-control form-control-sm" id="txtTahun" readonly />
                    <span asp-validation-for="Tahun" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="Bulan" class="control-label"></label>
                    <input value="@Model.Bulan" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="Bulan" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label" asp-for="JKWId"></label>
                    <input class="form-control form-control-sm" value="@Model.JKW?.Kod - @Model.JKW?.Perihal " readonly />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label" asp-for="JBahagianId"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.JBahagian?.Kod - @Model.JBahagian?.Perihal " readonly />
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="NoRujukan" class="control-label"></label>
                    <input id="txtNoRujukan" asp-for="NoRujukan" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="NoRujukan" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label" asp-for="AkCartaId"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.AkCarta?.Kod - @Model.AkCarta?.Perihal " readonly />
                </div>
            </div>

        </div>
        <div class="row g-3 mb-2">
            <div class="col-md-4">
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlCetak" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlCetak" type="radio" id="FlCetak1" name="FlCetak" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlCetak1">Belum</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlCetak" type="radio" id="FlCetak2" name="FlCetak" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlCetak">Sudah</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label asp-for="FlPosting" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlPosting" type="radio" id="FlPosting1" name="FlPosting" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlPosting">Belum</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlPosting" type="radio" id="FlPosting2" name="FlPosting" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlPosting">Sudah</label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-2">
                    <div class="card-body p-1 ms-3">
                        <div class="form-group col-sm">
                            <label class="control-label">Batal</label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="0" checked>
                                <label class="custom-control-label" for="FlHapus">Tidak</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="1">
                                <label class="custom-control-label" for="FlHapus">Ya</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*table Jurulatih*@
        @if (Model.SuProfil1 != null && Model.SuProfil1.Count() > 0)
        {
            <div class="card box-shadow mb-3">
                <div class="card-header">
                    <h6>Jurulatih</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">

                        <table id="tblAtlet" class="table table-sm" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th hidden>Atlet Id</th>
                                    <th style="width:30%">Nama</th>
                                    <th style="width:10%">Jenis Sukan</th>
                                    <th style="width:5%">No KP</th>
                                    <th style="width:5%">No Akaun</th>
                                    <th style="width:8%">Amaun RM</th>
                                    <th style="width:8%">Amaun Sebelum RM</th>
                                    <th style="width:8%">Tunggakan RM</th>
                                    <th style="width:8%">Jumlah RM</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyAtlet">

                                @foreach (var item in Model.SuProfil1)
                                {
                                    <tr>
                                        <td hidden>
                                            @item.SuJurulatih?.Id
                                        </td>
                                        <td class="text-uppercase">
                                            @item.SuJurulatih?.Nama
                                        </td>
                                        <td class="text-uppercase">
                                            @item.JSukan?.Perihal
                                        </td>
                                        <td>
                                            @item.SuJurulatih?.NoKp
                                        </td>
                                        <td >
                                            @item.SuJurulatih?.NoAkaunBank
                                        </td>
                                        <td class="text-end">
                                            @Convert.ToDecimal(item.Amaun).ToString("#,##0.00")
                                        </td>
                                        <td class="text-end">
                                            @Convert.ToDecimal(item.AmaunSebelum).ToString("#,##0.00")
                                        </td>
                                        <td class="text-end">
                                            @Convert.ToDecimal(item.Tunggakan).ToString("#,##0.00")
                                        </td>
                                        <td class="text-end">
                                            @Convert.ToDecimal(item.Jumlah).ToString("#,##0.00")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>

                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <label class="control-label">Jumlah Keseluruhan RM</label>
                        <input class="form-control form-control-sm" id="jumlahKeseluruhan" value="@Model.Jumlah" readonly />
                    </div>
                </div>
            </div>
        }

        @*table Jurulatih end*@


        <hr />
        <div class="form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input name="syscode" value="SPPB" hidden />
                @if (Model.FlPosting == 1)
                {
                }
                else
                {
                    <input type="submit" value="Hapus" class="btn ac-danger btn-sm" />
                }

                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </form>

        </div>
    </div>
</div>
