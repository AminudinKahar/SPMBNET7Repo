@model SPMBNET7.CoreBusiness.Models.Modules._01_Jadual.JBank


@{
    ViewData["Title"] = "Bank - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleDeletePartial.cshtml" />

        <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Kod)
            </dt>
            <dd class="col-sm-10 text-uppercase">
                @Html.DisplayFor(model => model.Kod)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nama)
            </dt>
            <dd class="col-sm-10 text-uppercase">
                @Html.DisplayFor(model => model.Nama)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.KodEFT)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.KodEFT)
            </dd>
        </dl>

        <div class="form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input name="syscode" value="SPPB" hidden />
                <input type="submit" value="Hapus" class="btn ac-danger btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </form>

        </div>

    </div>

</div>
