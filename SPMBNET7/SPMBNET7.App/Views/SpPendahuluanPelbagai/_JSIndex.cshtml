<script type="text/javascript">

    var columnSearchVar;
    $(document).ready(function () {

        var table = $('.table').DataTable({
            "paging": false,
            rowReorder: true,
            columnDefs: [
                { orderable: true, className: 'reorder', targets: 1 },
                { orderable: true, className: 'reorder', targets: 2 },
                { orderable: false, targets: '_all' }
            ],
            "order": [[2, "asc"]],
            "scrollY": "50vh",
            "scrollX": true,
            "scrollCollapse": true,
            "paging": false,
            dom: 'lrt'
        });

        $('#columnSearch').change(function () {
            columnSearchVar = $(this).val();
            // refresh table
            $('#myInput').val('');
            table.destroy();

            table = $('.table').DataTable({
                "paging": false,
                rowReorder: true,
                columnDefs: [
                    { orderable: true, className: 'reorder', targets: 1 },
                    { orderable: true, className: 'reorder', targets: 2 },
                    { orderable: false, targets: '_all' }
                ],
                "order": [[2, "asc"]],
                "scrollY": "50vh",
                "scrollX": true,
                "scrollCollapse": true,
                "paging": false,
                dom: 'lrt'
            });
            // refresh table end
        });

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

        $('#myInput').on('keyup', function () {
            if (!columnSearchVar) {
                table
                    .search(this.value)
                    .draw();
            }
            else {
                table
                    .columns(columnSearchVar)
                    .search(this.value)
                    .draw();
            }
        });

        var scol = $('#searchColumn').val();

        $("#myInputString").hide();
        $("#myInputDate1").hide();
        $("#myInputDate2").hide();

        if (scol === "Tarikh") {
            $("#myInputString").hide();
            $("#myInputDate1").show();
            $("#myInputDate2").show();
        }
        if (scol === "Nama" || scol === "NoRujukan") {
            $("#myInputString").show();
            $("#myInputDate1").hide();
            $("#myInputDate2").hide();
        }

        $("#searchColumn").change(function () {
            $("#myInput").val("");
            $("#inputTarikh1").val("");
            $("#inputTarikh2").val("");

            if (this.value === "Tarikh") {
                $("#myInputString").hide();
                $("#myInputDate1").show();
                $("#myInputDate2").show();
            }
            if (this.value === "Nama" || this.value === "NoRujukan") {
                $("#myInputString").show();
                $("#myInputDate1").hide();
                $("#myInputDate2").hide();
            }
        });
    });

    //modal click
    function ModalClick(button) {
        //Determine the reference of the Row using the Button.
        var row = $(button).closest("TR");
        var id = $("TD", row).eq(1).html();
        var noPermohonan = $("TD", row).eq(2).html();
        var jumKeseluruhan = $("TD", row).eq(6).html();
        //var jumSokong = Number(jumKeseluruhan.replace(/[^0-9.-]+/g, ""));
        //alert(noPermohonan);
        $(".moId").val(id);
        $(".moPermohonan").val(noPermohonan.trim());
        $(".moJumlah").val(jumKeseluruhan);
        $(".moSokong").val(jumKeseluruhan);
    };
</script>
