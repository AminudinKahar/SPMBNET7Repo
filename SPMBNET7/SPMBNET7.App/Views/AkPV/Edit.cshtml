@model SPMBNET7.CoreBusiness.Models.Modules._02_Akaun.ViewModels.AkPVViewModel
@{
    ViewData["Title"] = "PV - Ubah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_JSEdit" />

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleEditPartial.cshtml" />
        <form asp-action="Edit" class="needs-validation">
            <input type="hidden" asp-for="Id" />
            <input name="syscode" value="SPPB" hidden />
            <input asp-for="Nama" readonly hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Tahun" class="control-label"></label><span class="text-danger control-label">*</span>
                        <input asp-for="Tahun" class="form-control form-control-sm form-control-sm-custom" id="txtTahun" readonly required />
                        <span asp-validation-for="Tahun" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Tarikh" class="control-label"></label><span class="text-danger control-label">*</span>
                        <input asp-for="Tarikh" class="form-control form-control-sm" required readonly />
                        <span asp-validation-for="Tarikh" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="JKWId" class="control-label"></label><span class="text-danger control-label">*</span>
                        <select class="form-control form-control-sm text-uppercase" asp-for="JKWId" disabled id="ddlKW">
                            @foreach (var s in ViewBag.JKW)
                            {
                                <option value="@s.Id">@s.Kod - @s.Perihal </option>
                            }
                        </select>
                        <span asp-validation-for="JKWId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="JBahagianId" class="control-label"></label><span class="text-danger control-label">*</span>
                        <select class="form-control form-control-sm text-uppercase" asp-for="JBahagianId" id="ddlBahagian">
                            @foreach (var s in ViewBag.JBahagian)
                            {
                                <option value="@s.Id">@s.Kod - @s.Perihal </option>
                            }
                        </select>
                        <span asp-validation-for="JBahagianId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="AkBankId" class="control-label"></label><span class="text-danger control-label">*</span>
                        <select class="form-control select2 input-group-sm" asp-for="AkBankId" required>
                            <option value="" disabled selected>-- Pilih Bank --</option>
                            @foreach (var s in ViewBag.AkBank)
                            {
                                <option value="@s.Id">@s.NoAkaun - @s.JBank.Nama</option>
                            }
                        </select>
                        <span asp-validation-for="AkBankId" class="text-danger"></span>
                    </div>
                </div>

            </div>
            @switch (Model.FlKategoriPenerima)
            {
                case KategoriPenerima.Pembekal:
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="NoPV" class="control-label"></label>
                                <input id="txtNoRujukan" value="@Model.NoPV.Substring(3)" class="form-control form-control-sm" readonly />
                            </div>
                        </div>
                        <div class="col-md-10">
                            <input id="ddlKodPekerja" value="0" hidden />
                            <input id="ddlPanjar" value="0" hidden />
                            <label asp-for="AkPembekalId" class="control-label"></label><span class="text-danger control-label">*</span>
                            <select class="form-control form-control-sm select2" asp-for="AkPembekalId" id="ddlKodPembekal" disabled>
                                <option value="0" disabled selected>-- Pilih Kod Pembekal --</option>
                                @foreach (var s in ViewBag.AkPembekal)
                                {
                                    <option value="@s.Id">@s.KodSykt - @s.NamaSykt</option>
                                }
                            </select>
                            <span asp-validation-for="AkPembekalId" class="text-danger"></span>
                        </div>
                    </div>
                    break;
                case KategoriPenerima.Pekerja:
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="NoPV" class="control-label"></label>
                                <input id="txtNoRujukan" value="@Model.NoPV.Substring(3)" class="form-control form-control-sm" readonly />
                            </div>
                        </div>
                        <div class="col-md-10">
                            <input id="ddlKodPembekal" value="0" hidden />
                            <input id="ddlPanjar" value="0" hidden />
                            <label asp-for="SuPekerjaId" class="control-label"></label><span class="text-danger control-label">*</span>
                            <select class="form-control form-control-sm select2" asp-for="SuPekerjaId" id="ddlKodPembekal" disabled>
                                <option value="0" disabled selected>-- Pilih Kod Pembekal --</option>
                                @foreach (var s in ViewBag.SuPekerja)
                                {
                                    <option value="@s.Id">@s.NoGaji - @s.Nama</option>
                                }
                            </select>
                            <span asp-validation-for="SuPekerjaId" class="text-danger"></span>
                        </div>
                    </div>
                    break;
                case KategoriPenerima.PemegangPanjar:
                    <div class="card box-shadow mb-3">
                        <div class="card-header">
                            <h6>Maklumat Panjar</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <input type="hidden" asp-for="AkTunaiRuncitId" />
                                    <label asp-for="AkTunaiRuncitId" class="control-label"></label><span class="text-danger control-label">*</span>
                                    <select class="form-control form-control-sm" asp-for="AkTunaiRuncitId" required id="ddlTunaiRuncit" disabled>
                                        <option value="0" selected>-- Pilih Kaunter Panjar --</option>
                                        @foreach (var s in ViewBag.AkTunaiRuncit)
                                        {

                                            <option value="@s.Id">@s.KaunterPanjar (@s.AkCarta.Kod - @s.AkCarta.Perihal )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="NoRekup" class="control-label"></label>
                                        <input asp-for="NoRekup" class="form-control form-control-sm text-uppercase" id="txtNoRekup" disabled />
                                        <span asp-validation-for="NoRekup" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    break;
                default:
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="NoPV" class="control-label"></label>
                                <input id="txtNoRujukan" value="@Model.NoPV.Substring(3)" class="form-control form-control-sm" readonly />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="NoKP" class="control-label">No Kad Pengenalan</label>
                                <input asp-for="NoKP" class="form-control form-control-sm" id="txtNoKP" />
                            </div>
                        </div>
                        <div class="col-md-8">
                            <input id="ddlKodPembekal" value="0" hidden />
                            <input id="ddlPanjar" value="0" hidden />
                            <input id="ddlKodPekerja" value="0" hidden />
                            <div class="form-group">
                                <label asp-for="Nama" class="control-label"></label><span class="text-danger control-label">*</span>
                                <input asp-for="Nama" class="form-control form-control-sm text-uppercase" id="txtNamaPembekal" readonly />
                                <span asp-validation-for="Nama" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="Alamat1" class="control-label">Alamat</label>
                        <input asp-for="Alamat1" class="form-control form-control-sm text-uppercase" id="txtAlamat1" />
                    </div>
                    <div class="form-group" hidden>
                        <input asp-for="Alamat2" class="form-control form-control-sm text-uppercase" id="txtAlamat2" />
                    </div>
                    <div class="form-group" hidden>
                        <input asp-for="Alamat3" class="form-control form-control-sm text-uppercase" id="txtAlamat3" />
                    </div>
                    @if (Model.IsGanda == false)
                    {
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="NoAkaunBank" class="control-label"></label>
                                    <input asp-for="NoAkaunBank" class="form-control form-control-sm text-uppercase" id="txtNoAkaunBank" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Telefon" class="control-label"></label>
                                    <input asp-for="Telefon" class="form-control form-control-sm text-uppercase" id="txtTelefon" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Emel" class="control-label"></label>
                                    <input asp-for="Emel" class="form-control form-control-sm" id="txtEmel" />
                                    <span asp-validation-for="Emel" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    }

                    break;
            }

            @if (Model.IsGanda == false)
            {

                <div class="row g-3">
                    <div class="col-md-3">
                        <label asp-for="JCaraBayarId" class="control-label"></label><span class="text-danger control-label">*</span>
                        <select class="form-control form-control-sm" asp-for="JCaraBayarId" required>
                            <option value="0" disabled selected>-- Pilih Cara Bayaran --</option>
                            @foreach (var s in ViewBag.JCaraBayar)
                            {
                                <option value="@s.Id" class="text-uppercase">@s.Kod - @s.Perihal</option>
                            }
                        </select>
                        <span asp-validation-for="JCaraBayarId" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="JBankId" class="control-label"></label>
                        <select class="form-control form-control-sm select2" asp-for="JBankId" id="ddlJBank">
                            <option value="0" disabled selected>-- Pilih Bank --</option>
                            @foreach (var s in ViewBag.JBank)
                            {
                                <option value="@s.Id" class="text-uppercase">@s.Kod - @s.Nama</option>
                            }
                        </select>

                        <span asp-validation-for="JBankId" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="NoCekAtauEFT" class="control-label"></label>
                            <input asp-for="NoCekAtauEFT" class="form-control form-control-sm form-control-sm" />
                            <span asp-validation-for="NoCekAtauEFT" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="TarCekAtauEFT" class="control-label"></label>
                            <input asp-for="TarCekAtauEFT" class="form-control form-control-sm" />
                            <span asp-validation-for="TarCekAtauEFT" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }

            <div class="form-group">
                <label asp-for="Perihal" class="control-label"></label>
                <textarea asp-for="Perihal" class="form-control form-control-sm text-uppercase" rows="2"></textarea>
                <span asp-validation-for="Perihal" class="text-danger"></span>
            </div>
            @*hidden values*@
            <div hidden>
                @*hidden type input*@
                <div class="form-group">
                    <label asp-for="NoPV" class="control-label"></label>
                    <input id="noRujukan" asp-for="NoPV" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="NoPV" class="text-danger"></span>
                </div>

                <div class="col-lg-2 pb-3">
                    <div class="card mb-2">
                        <div class="card-body pb-1 pt-1 ms-3">
                            <div class="form-group mb-0 mt-1">
                                <label class="control-label">Jenis ABB</label>
                            </div>
                            <div class="row g-3 col-sm ml-2">
                                <div class="custom-control custom-radio col-md-6 ">
                                    <input class="custom-control-input " type="radio" id="IsAKB0" asp-for="IsAKB" value="false" checked>
                                    <label class="custom-control-label" for="IsAKB0">
                                        Tidak
                                    </label>
                                </div>
                                <div class="custom-control custom-radio col-md-6 ">
                                    <input class="custom-control-input " type="radio" id="IsAKB1" asp-for="IsAKB" value="true">
                                    <label class="custom-control-label" for="IsAKB1">
                                        Ya
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-2">
                        <div class="form-group col-sm">
                            <label asp-for="FlJenisBaucer" class="control-label"></label>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer0" type="radio" name="FlJenisBaucer" class="custom-control-input" value="Am" checked>
                                <label class="custom-control-label" for="FlJenisBaucer0">Am</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer1" type="radio" name="FlJenisBaucer" class="custom-control-input" value="Inbois">
                                <label class="custom-control-label" for="FlJenisBaucer1">Inbois</label>
                            </div>
                            <div class="custom-control custom-radio" hidden>
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer2" type="radio" name="FlJenisBaucer" class="custom-control-input" value="Gaji">
                                <label class="custom-control-label" for="FlJenisBaucer2">Gaji</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer3" type="radio" name="FlJenisBaucer" class="custom-control-input" value="Pendahuluan">
                                <label class="custom-control-label" for="FlJenisBaucer3">Pendahuluan</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer4" type="radio" name="FlJenisBaucer" class="custom-control-input" value="Rekupan">
                                <label class="custom-control-label" for="FlJenisBaucer4">Rekupan</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer5" type="radio" name="FlJenisBaucer" class="custom-control-input" value="TambahHadPanjar">
                                <label class="custom-control-label" for="FlJenisBaucer5">Tambah Had Panjar</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input asp-for="FlJenisBaucer" id="FlJenisBaucer6" type="radio" name="FlJenisBaucer" class="custom-control-input" value="ProfilAtletJurulatih">
                                <label class="custom-control-label" for="FlJenisBaucer6">Profil Atlet / Jurulatih</label>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">

                            <div class="form-group col-sm">
                                <label class="control-label">Kategori Penerima</label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlKategoriPenerima" type="radio" id="FlKategoriPenerima1" name="FlKategoriPenerima" class="custom-control-input" value="Am" checked>
                                    <label class="custom-control-label" for="FlKategoriPenerima1">Am</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlKategoriPenerima" type="radio" id="FlKategoriPenerima2" name="FlKategoriPenerima" class="custom-control-input" value="Pembekal">
                                    <label class="custom-control-label" for="FlKategoriPenerima2">Pembekal</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlKategoriPenerima" type="radio" id="FlKategoriPenerima3" name="FlKategoriPenerima" class="custom-control-input" value="Pekerja">
                                    <label class="custom-control-label" for="FlKategoriPenerima3">Pekerja</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">
                            <div class="form-group col-sm">
                                <label class="control-label">Cetak</label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlCetak" type="radio" id="FlCetak1" name="FlCetak" class="custom-control-input" value="0" checked>
                                    <label class="custom-control-label" for="FlCetak1">Belum</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlCetak" type="radio" id="FlCetak2" name="FlCetak" class="custom-control-input" value="1">
                                    <label class="custom-control-label" for="FlCetak2">Sudah</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">
                            <div class="form-group col-sm">
                                <label class="control-label">Posting</label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlPosting" type="radio" id="FlPosting1" name="FlPosting" class="custom-control-input" value="0" checked>
                                    <label class="custom-control-label" for="FlPosting">Belum</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlPosting" type="radio" id="FlPosting2" name="FlPosting" class="custom-control-input" value="1">
                                    <label class="custom-control-label" for="FlPosting">Sudah</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">
                            <div class="form-group col-sm">
                                <label class="control-label">Batal</label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="0" checked>
                                    <label class="custom-control-label" for="FlBatal">Tidak</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="1">
                                    <label class="custom-control-label" for="FlHapus">Ya</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="NoPV" class="control-label"></label>
                    <input id="noRujukan" asp-for="NoPV" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="NoPV" class="text-danger"></span>
                </div>

                <div class="form-group" hidden>
                    <label asp-for="FlCetak" class="control-label"></label>
                    <input asp-for="FlCetak" class="form-control form-control-sm" value="0" />
                    <span asp-validation-for="FlCetak" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="FlPosting" class="control-label"></label>
                    <input asp-for="FlPosting" class="form-control form-control-sm" value="0" />
                    <span asp-validation-for="FlPosting" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="FlHapus" class="control-label"></label>
                    <input asp-for="FlHapus" class="form-control form-control-sm" value="0" />
                    <span asp-validation-for="FlHapus" class="text-danger"></span>
                </div>

                <div class="form-group" hidden>
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control form-control-sm" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="TarMasuk" class="control-label"></label>
                    <input asp-for="TarMasuk" class="form-control form-control-sm" value="@DateTime.Now.ToString("s")" disabled />
                    <span asp-validation-for="TarMasuk" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="UserIdKemaskini" class="control-label"></label>
                    <input asp-for="UserIdKemaskini" class="form-control form-control-sm" />
                    <span asp-validation-for="UserIdKemaskini" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="TarKemaskini" class="control-label"></label>
                    <input asp-for="TarKemaskini" class="form-control form-control-sm" value="@DateTime.Now.ToString("s")" disabled />
                    <span asp-validation-for="TarKemaskini" class="text-danger"></span>
                </div>
            </div>
            @*hidden values end*@
            <br />
            @*table Inbois*@
            @if (Model.FlJenisBaucer == JenisBaucer.Inbois)
            {
                <div class="card box-shadow mb-3" id="cardInbois">
                    <div class="card-header">
                        <h6>PO dan Inbois</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tblInbois" class="table table-sm nowrap text-nowrap" cellpadding="0" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th width="20%">No Inbois</th>
                                        <th width="10%">Tarikh Inbois</th>
                                        <th width="10%" class="text-end">Amaun Inbois RM</th>
                                        <th width="20%">No PO / Inden</th>
                                        <th width="10%">Tar PO / Inden</th>
                                        <th width="10%" class="text-end">Amaun PO / Inden RM</th>
                                        <th width="5%"></th>
                                        <th width="5%"></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyInbois">
                                    @foreach (var item in ViewBag.AkPV2)
                                    {
                                        <tr id="@item.Id">
                                            <td id="akBelianId" hidden>@item.AkBelianId</td>
                                            <td>@item.AkBelian.NoInbois</td>
                                            <td>@item.AkBelian.Tarikh.ToString("dd/MM/yyyy")</td>
                                            <td class="text-end amaunInbois">@item.Amaun</td>
                                            @if (item.AkBelian.AkPO != null || item.AkBelian.AkInden != null)
                                            {
                                                if (item.AkBelian.AkPO != null)
                                                {
                                                    <td>@item.AkBelian.AkPO.NoPO</td>
                                                    <td>@item.AkBelian.AkPO.Tarikh.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-end">@Convert.ToDecimal(item.AkBelian.AkPO.Jumlah).ToString("#,##0.00")</td>
                                                }
                                                if (item.AkBelian.AkInden != null)
                                                {
                                                    <td>@item.AkBelian.AkInden.NoInden</td>
                                                    <td>@item.AkBelian.AkInden.Tarikh.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-end">@Convert.ToDecimal(item.AkBelian.AkInden.Jumlah).ToString("#,##0.00")</td>
                                                }

                                            }
