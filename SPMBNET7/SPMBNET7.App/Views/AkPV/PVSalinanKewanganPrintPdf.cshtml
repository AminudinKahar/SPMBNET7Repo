                <td class="text-center" height="50px"></td>
                <td class="text-center" height="50px"></td>

            </tr>
            <tr>
                <td class="text-center text-uppercase">@Model.Username</td>
                <td class="text-center">@Model.Penyemak.SuPekerja.Nama</td>
                <td class="text-center">@Model.Pelulus?.SuPekerja?.Nama</td>

            </tr>
            <tr>
