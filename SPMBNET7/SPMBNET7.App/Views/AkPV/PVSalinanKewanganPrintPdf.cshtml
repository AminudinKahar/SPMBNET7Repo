                <td class="text-center">Majlis Sukan Negeri Kedah</td>

            </tr>
            <tr>
                <td class="text-center">@DateTime.Now.ToString()</td>
                <td class="text-center"></td>
                <td class="text-center"></td>
            </tr>
        </tbody>
    </table>
</div>