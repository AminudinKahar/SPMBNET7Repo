<script type="text/javascript">
    $(document).ready(function () {
        var table = $('.table').DataTable({
            "paging": false,
            rowReorder: true,
            columnDefs: [
                { orderable: true, className: 'reorder', targets: 1 },
                { orderable: true, className: 'reorder', targets: 2 },
                { orderable: false, targets: '_all' }
            ],
            "order": [[2, "asc"]],
            "scrollY": "50vh",
            "scrollX": true,
            "scrollCollapse": true,
            "paging": false,
            dom: 'lrt'
        });

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

        var scol = $('#searchColumn').val();

        $("#myInputString").hide();
        $("#myInputDate1").hide();
        $("#myInputDate2").hide();

        if (scol === "Tarikh") {
            $("#myInputString").hide();
            $("#myInputDate1").show();
            $("#myInputDate2").show();
        }
        if (scol === "Tahun" || scol === "NoDokumen") {
            $("#myInputString").show();
            $("#myInputDate1").hide();
            $("#myInputDate2").hide();
        }

        $("#searchColumn").change(function () {
            $("#myInput").val("");
            $("#inputTarikh1").val("");
            $("#inputTarikh2").val("");

            if (this.value === "Tarikh") {
                $("#myInputString").hide();
                $("#myInputDate1").show();
                $("#myInputDate2").show();
            }
            if (this.value === "Tahun" || this.value === "NoDokumen") {
                $("#myInputString").show();
                $("#myInputDate1").hide();
                $("#myInputDate2").hide();
            }
        });
    });

    //modal click
    function ModalClick(button) {
        //Determine the reference of the Row using the Button.
        var row = $(button).closest("TR");
        var id = $("TD", row).eq(1).html();
        var noRujukan = $("TD", row).eq(2).html();
        var tarSlip = $("TD", row).eq(4).html();
        
        //var jumSokong = Number(jumKeseluruhan.replace(/[^0-9.-]+/g, ""));
        //alert(noPermohonan);
        $(".moId").val(id.trim());
        $(".moNoRujukan").val(noRujukan.trim());
        $(".moNoSlip").val(noRujukan.trim());
        $(".moTarSlip").val(showSQLFormatDate(tarSlip));
    };
</script>