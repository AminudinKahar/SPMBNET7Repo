@model SPMBNET7.CoreBusiness.Models.Modules._02_Akaun.AkPO


@{
    ViewData["Title"] = "Pesanan Tempatan - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_JSDetails" />
<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Pages/Partials/Common/_TitleDetailsPartial.cshtml" />
        <div class="card-body">
            <div class="row g-3">
                <div class="col-lg-10 mb-2">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Tahun" class="control-label"></label>
                                <input class="form-control form-control-sm" value="@Model.Tahun" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="JKWId" class="control-label"></label>
                                <input class="form-control form-control-sm" value="@Model.JKW?.Kod - @Model.JKW?.Perihal " readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="JBahagianId" class="control-label"></label>
                                <input class="form-control form-control-sm text-uppercase" value="@Model.JBahagian?.Kod - @Model.JBahagian?.Perihal " readonly />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Tarikh" class="control-label"></label>
                                <input class="form-control form-control-sm text-uppercase" value="@Model.Tarikh.ToString("dd/MM/yyyy")" readonly />
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label">No PO</label>
                                <input class="form-control form-control-sm" value="@Model.NoPO" readonly />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="AkNotaMintaId" class="control-label"></label>
                                <input class="form-control form-control-sm" value="@Model.AkNotaMinta?.NoRujukan" readonly />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="TarikhBekalan" class="control-label"></label>
                                <input asp-for="TarikhBekalan" class="form-control form-control-sm text-uppercase" type="date" readonly />
                            </div>
                        </div>

                    </div>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">No Pembekal</label>
                                <input class="form-control form-control-sm" value="@Model.AkPembekal?.KodSykt" readonly />
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label">Nama Pembekal</label>
                                <input class="form-control form-control-sm text-uppercase" value="@Model.AkPembekal?.NamaSykt" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Alamat</label>
                        <input class="form-control form-control-sm text-uppercase" value="@Model.AkPembekal?.Alamat1 " readonly />
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-sm text-uppercase" value="@Model.AkPembekal?.Alamat2 " readonly />
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-sm text-uppercase" value="@Model.AkPembekal?.Alamat3 " readonly />
                    </div>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Poskod</label>
                                <input class="form-control form-control-sm" value="@Model.AkPembekal?.Poskod " readonly />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Bandar</label>
                                <input class="form-control form-control-sm text-uppercase" value="@Model.AkPembekal?.Bandar " readonly />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Tel</label>
                                <input class="form-control form-control-sm" value="@Model.AkPembekal?.Telefon1 " readonly />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Emel</label>
                                <input class="form-control form-control-sm" value="@Model.AkPembekal?.Emel " readonly />
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="card mb-2">
                            <div class="card-body pl-3 pe-3 pt-2">

                                <label class="control-label">Maklumat Tambahan : </label>
                                <div class="custom-control custom-radio">
                                    <input type="checkbox" data-val="true" id="IsInKewangan" asp-for="IsInKewangan" disabled>
                                    <label class="control-label">PO ini berada di kewangan</label>
                                    <input type="hidden" name="IsInKewangan" value="false" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 mb-2">
                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">
                            <div class="form-group col-sm">
                                <label asp-for="FlCetak" class="control-label"></label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlCetak" type="radio" id="FlCetak1" name="FlCetak" class="custom-control-input" value="0" checked>
                                    <label class="custom-control-label" for="FlCetak1">Belum</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlCetak" type="radio" id="FlCetak2" name="FlCetak" class="custom-control-input" value="1">
                                    <label class="custom-control-label" for="FlCetak">Sudah</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">
                            <div class="form-group col-sm">
                                <label asp-for="FlPosting" class="control-label"></label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlPosting" type="radio" id="FlPosting1" name="FlPosting" class="custom-control-input" value="0" checked>
                                    <label class="custom-control-label" for="FlPosting">Belum</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlPosting" type="radio" id="FlPosting2" name="FlPosting" class="custom-control-input" value="1">
                                    <label class="custom-control-label" for="FlPosting">Sudah</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card mb-2">
                        <div class="card-body p-1 ms-3">
                            <div class="form-group col-sm">
                                <label asp-for="FlHapus" class="control-label"></label>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="0" checked>
                                    <label class="custom-control-label" for="FlHapus">Tidak</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input asp-for="FlHapus" type="radio" id="FlHapus1" name="FlHapus" class="custom-control-input" value="1">
                                    <label class="custom-control-label" for="FlHapus">Ya</label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            @*table Objek*@
            <div class="card box-shadow mb-3">
                <div class="card-header">
                    <h6>Objek</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">

                        <table id="tblObjek" class="table table-sm" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th style="width:40%">Kod</th>
                                    <th style="width:50%" class="text-end">Amaun</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbodyObjek">
                                @foreach (var item in ViewBag.akPO1)
                                {
                                    <tr id="@item.Id">
                                        <td id="akCartaId" hidden>@item.AkCartaId</td>
                                        <td class="text-uppercase">@item.AkCarta.Kod - @item.AkCarta.Perihal</td>
                                        <td class="text-end">@Convert.ToDecimal(item.Amaun).ToString("#,##0.00")</td>
                                    </tr>

                                }
                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>

                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <label class="control-label">Jumlah Objek RM</label>
                        <input class="form-control form-control-sm" id="jumlahObjek" value="@Convert.ToDecimal(Model.Jumlah).ToString("#,##0.00")" readonly />
                    </div>
                </div>
            </div>
            @*table Objek end*@

            @*table urusniaga*@
            <div class="card box-shadow mb-3">
                <div class="card-header">
                    <h6>Perihal</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblPerihal" class="table table-sm" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text-left">Bil</th>
                                    <th class="text-left">No Stok</th>
                                    <th class="text-left">Perihal</th>
                                    <th class="text-end">Kuantiti</th>
                                    <th class="text-center">Unit</th>
                                    <th class="text-end">Harga/Unit RM</th>
                                    <th class="text-end">Amaun RM</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyPerihal">
                                @foreach (var item in ViewBag.akPO2)
                                {
                                    <tr>
                                        <td class="text-end">@item.Bil</td>
                                        <td>@item.NoStok</td>
                                        <td class="text-uppercase">@item.Perihal</td>
                                        <td class="text-end">@item.Kuantiti</td>
                                        <td class="text-uppercase">@item.Unit</td>
                                        <td class="text-end">@Convert.ToDecimal(item.Harga).ToString("#,##0.00")</td>
                                        <td class="text-end amaunPerihal">@Convert.ToDecimal(item.Amaun).ToString("#,##0.00")</td>
                                    </tr>

                                }
                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <label class="control-label">Jumlah Perihal RM</label>
                        <input class="form-control form-control-sm" id="jumlahPerihal" name="JumlahPerihal" value="@Convert.ToDecimal(ViewBag.JumlahPerihal).ToString("#,##0.00")" readonly />
                    </div>
                </div>
            </div>
            @*table perihal end*@
            <hr />
            <div class="form-group">
                @if (Model.FlPosting == 1)
                {
                    <button class="btn ac-danger btn-sm" data-toggle="modal" data-target="#modalBatal">
                        Batal Dokumen
                    </button>
                }
                else
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a>
                }
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Batal -->
<div class="modal fade" id="modalBatal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-md modal-dialog modal-dialog-centered">
        <div class="modal-content ">
            <div class="modal-header bg-danger text-white">

                <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i>  Batal Dokumen</h5>

                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <p class="text-center mb-0">Dokumen ini telahpun <strong>diluluskan</strong>.</p>
                <p class="text-center">Anda pasti untuk meneruskan operasi?</p>
                <div class="row g-3 d-flex">
                    <div class="col-md-6">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="w-100 btn btn-danger btn-block btn-lg ">YA</a>
                    </div>
                    <div class="col-md-6">
                        <a data-dismiss="modal" aria-label="Close" class="w-100 btn btn-secondary btn-block btn-lg text-white">TIDAK</a>
                    </div>


                </div>
            </div>
            <div class="modal-footer" style="padding:0px;">


            </div>
        </div>
    </div>
</div>
<!-- Modal Batal End -->