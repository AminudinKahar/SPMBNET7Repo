@model SPMBNET7.CoreBusiness.Models.Modules._03_Sumber.JSukan

@{
    ViewData["Title"] = "Sukan - Tambah";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-success mb-0">@ViewData["Title"]</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Tambah</span>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="text-secondary float-end"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Perihal" class="control-label"></label>
                <input asp-for="Perihal" class="form-control form-control-sm text-uppercase" />
                <span asp-validation-for="Perihal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Jenis Sukan</label>
                <div class="card mb-2 p-2">
                    <div class="form-row ml-4 mt-3">
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="col-9">
                                    <label asp-for="IsElit"></label>
                                </div>
                                <div class="col-3">
                                    <div class="input-group input-group-sm ">
                                        <input type="checkbox" data-val="true" id="IsElit" asp-for="IsElit" value="true" class="form-control-sm">
                                        <input asp-for="IsElit" type="hidden" value="false">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="col-9">
                                    <label asp-for="IsPembangunan"></label>
                                </div>
                                <div class="col-3">
                                    <div class="input-group input-group-sm ">
                                        <input type="checkbox" data-val="true" id="IsPembangunan" asp-for="IsPembangunan" value="true" class="form-control-sm">
                                        <input asp-for="IsPembangunan" type="hidden" value="false">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>

    </div>
</div>
